{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "client/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/public-key",
        "function": "app"
      },
      { "source": "/product-details", "function": "app" },
      {
        "source": "/customer",
        "function": "app"
      },
      {
        "source": "/create-payment-intent",
        "function": "app"
      },
      {
        "source": "/send-email",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
